<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="hzt_hotel" />

    <dubbo:registry address="zookeeper://10.10.103.96:2181" />

    <dubbo:protocol name="dubbo" port="20882" />

    <dubbo:service interface="learn.saga.api.HotelService"
                   ref="HotelBean" retries="0" timeout="5000"/>

    <bean id="HotelBean" class="learn.saga.hotel.service.HotelBookService" />

</beans>